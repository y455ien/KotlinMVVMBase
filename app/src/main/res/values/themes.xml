<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinMVVMBase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--        <item name="colorOnSurface">@color/border_grey</item>-->
        <item name="fontFamily">"sans-serif"</item>
    </style>

    <!--    ********** No Action bar theme for splash ********** -->

    <style name="noActionBarTheme" parent="Theme.KotlinMVVMBase">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    ********** Elements ********** -->

    <style name="outlined_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">12dp</item>
        <item name="strokeColor">@color/primary_color</item>
        <item name="strokeWidth">2dp</item>
        <!--        <item name="android:textColor">@android:color/holo_green_light</item>-->
        <!--        <item name="android:strokeColor">@android:color/holo_green_light</item>-->
    </style>


    <style name="filled_button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
    </style>


    <style name="text_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="title_text_28" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">"sans-serif-black"</item>
        <item name="android:textSize">28sp</item>
    </style>


    <style name="heading_text_18" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="sub_heading_text_16" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="body_text_14" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">"sans-serif"</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="hash_tag_text_14" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">"sans-serif"</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
<!--        <item name="android:background">@drawable/hash_tag_bg</item>-->
    </style>

    <style name="custom_car_view" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>