<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    tools:context=".widget.file_picker.FilePickerDialog">

    <View
        android:id="@+id/pick_image_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/pick_image_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pick_image_title" />

    <TextView
        android:padding="20dp"
        style="@style/heading_text_18"
        android:id="@+id/pick_image_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="IMAGE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pick_image_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/pick_file_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="@id/pick_file_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pick_file_title" />

    <TextView
        android:padding="20dp"
        style="@style/heading_text_18"
        android:id="@+id/pick_file_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="FILE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pick_file_icon"
        app:layout_constraintTop_toBottomOf="@id/pick_image_title" />

</androidx.constraintlayout.widget.ConstraintLayout>