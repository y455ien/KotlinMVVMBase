<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kotlinmvvmbase.modules.business.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_homeInternal"
            app:destination="@id/homeInternal" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.kotlinmvvmbase.modules.business.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kotlinmvvmbase.modules.business.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/homeInternal"
        android:name="com.example.kotlinmvvmbase.modules.business.ui.home.internal_home.HomeInternal"
        android:label="fragment_home_internal"
        tools:layout="@layout/fragment_home_internal" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.kotlinmvvmbase.modules.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <dialog
        android:id="@+id/filePickerDialog"
        android:name="com.example.kotlinmvvmbase.widget.file_picker.FilePickerDialog"
        android:label="fragment_file_picker_dialog"
        tools:layout="@layout/fragment_file_picker_dialog" >
        <argument
            android:name="type"
            app:argType="com.example.kotlinmvvmbase.enum.FilePickerType" />
    </dialog>

    <fragment
        android:id="@+id/locationPicker"
        android:name="com.example.kotlinmvvmbase.widget.location_picker.LocationPicker"
        android:label="fragment_location_picker"
        tools:layout="@layout/fragment_location_picker" />
</navigation>